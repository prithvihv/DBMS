<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add a new course into <%=department.Department_name%> of <%=college.Name%></h1>
		<div style="width:30%; margin:25px auto">
			<form action="/college/<%=college.College_id%>/department/<%=department.Department_id%>/course"
				method="POST" accept-charset="utf-8">
				<div class="form-group">
					<input class="form-control" type="text" name="course[Name]" placeholder="Name course">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="course[Description]" placeholder="Description	">
				</div>

				<div class="form-group">
					<input class="form-control" type="number" name="course[CreditPoints]" placeholder="CreditPoints">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="course[Duration]" placeholder="Duration">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../partials/footer %>