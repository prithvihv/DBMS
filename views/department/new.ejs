<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add a new department to <%=college.Name%></h1>
		<div style="width:30%; margin:25px auto">
			<form action="/college/<%=college.College_id%>/department" method="POST" accept-charset="utf-8">
				<div class="form-group">
					<input class="form-control" type="text" name="department[Department_name]"
						placeholder="department name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="department[HOD]" placeholder="HOD">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="department[Description]"
						placeholder="department description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>

	</div>
</div>
<% include ../partials/footer %>