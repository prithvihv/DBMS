<% include ../partials/header %>

<div class="ui container">
	<div class="row">

    <h1 style="text-align: center">Register A New college</h1>

    <div style="width:30%; margin:25px auto">
			<form action="/college" method="POST" accept-charset="utf-8">

        <div class="form-group row">

          <div class="col-xs-8">
						<input class="form-control" type="text" name="college[Name]" placeholder="Name">
					</div>

					<div class="rating">

            <label>
      				<input type="radio" name="college[Rating]" value="1" checked/>
      				<span class="icon">★</span>
    				</label>

            <% for(var i=2; i<=5; i++) { %>
        			<label>
        				<input type="radio" name="college[Rating]" value="<%=i%>" />
                <% for(var j=0;j<i;j++) { %>
        				  <span class="icon">★</span>
                <% } %>
      				</label>
            <% } %>

          </div>

				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="college[Logo]" placeholder="Image URL">
				</div>

        <div class="form-group">
					<textarea class="form-control" name = "college[Description]" rows="3" placeholder="Description"></textarea>
				</div>

        <div class="form-group row">

          <div class="col-xs-6">
						<input class="form-control" type="text" name="college[City]" placeholder="City">
					</div>

          <div class="col-xs-6">
						<input class="form-control" type="text" name="college[Area]" placeholder="Area">
					</div>

        </div>

        <div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Create!</button>
				</div>

			</form>
    </div>

  </div>
</div>

<% include ../partials/footer %>